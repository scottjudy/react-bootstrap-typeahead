{
  "env": {
    "browser": true,
    "jest": true
  },
  "extends": [
    "@ericgio/eslint-config-react",
    "plugin:react-hooks/recommended",
    "plugin:flowtype/recommended",
    "prettier"
  ],
  "globals": {},
  "parser": "babel-eslint",
  "plugins": ["flowtype"],
  "settings": {
    "flowtype": {
      "onlyFilesWithFlowAnnotation": true
    },
    "react": {
      "flowVersion": "0.109"
    }
  },
  "rules": {
    "react/static-property-placement": [2, "static public field"]
  }
}
