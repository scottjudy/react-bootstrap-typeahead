{
  "env": {
    "browser": true,
    "jest": true,
  },
  "extends": [
    "eslint-config-ericgio",
    "plugin:flowtype/recommended"
  ],
  "globals": {},
  "parser": "babel-eslint",
  "plugins": [
    "flowtype"
  ],
  "settings": {
    "flowtype": {
      "onlyFilesWithFlowAnnotation": true
    },
    "react": {
      "flowVersion": "0.107"
    }
  },
  "rules": {
    "react/static-property-placement": [2, "static public field"],
  },
}
